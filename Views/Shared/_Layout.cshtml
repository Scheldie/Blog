
<!DOCTYPE html>
    <html lang="Russian">
    <head>
        <title>@ViewData["Title"] - petProj</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Главная</title>
        <link rel="stylesheet" href="~/css/nav-home-reg-sign.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    </head>
    <body>
        <header>
            <nav class="index-header">
                <ul class="header">
                <li class="header-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/blog.png" class="logo"></a>
                    </li>
                    <li class="header-item"><a asp-area="" asp-controller="Authorization" asp-action="LogIn"><button class="button sign-button">Log in</button></a></li>
                <li class="header-item"><a asp-area="" asp-controller="Authorization" asp-action="SignUp"><button class="button registration-button">Sign up</button></a></li>
                </ul>
            </nav>
        </header>
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>
