@{
}
<!DOCTYPE html>
<html lang="Russian">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/css/nav-home-reg-sign.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="form-div">
                <form class="initial-form">
                    <input asp-for="Email" name="Email" placeholder="Email" class="data-account form-element">
                    <input asp-for="Password" name="Password" placeholder="Password" class="data-account form-element">
                    <input asp-for="ConfirmPassword" name="Password" placeholder="Confirm Password" class="data-account form-element">
                    <a asp-area="" asp-controller="Authorization" asp-action="LogIn"><button class="button registration-button form-element"><span class="registration-button-title">SignUp</span></button></a><br>
                </form>
            </div>
        </main>
    </div>
</body>
</html>